<!--index.wxml-->
<view class="container">
  <view wx:for="{{articles}}" wx:key="*this" class='article' data-id='{{item.Id}}' bindtap="jump">
    <view class='title'>
      {{item.Title}}
    </view>
    <view class='content'>
      {{item.Context}}
    </view>
    <view class='time'>
      <icon type="waiting" color="rgb(184,247,136)" size='16' />
      <label style='font-size:12px;'> {{item.PublishedDate}}</label>
    </view>
  </view>
</view>