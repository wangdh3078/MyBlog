/* pages/category/index.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.container {
  padding-left: 10rpx;
  padding-right: 10rpx;
}

/*搜索*/

.search {
  flex: auto;
  display: flex;
  flex-direction: column;
  background: #fff;
}
.search-result {
  flex: auto;
  position: relative;
}

.search-result scroll-view {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  top: 0;
}

.loading {
  padding: 10rpx;
  justify-content:center;
  display: flex;
  align-items: center;
}

.loadingImg, .loadingMsg {
  height: 25px;
  display: inline-block;
}

.article {
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1px dotted #666;
  width: 98%;
  margin-left: 1%;
  }

.title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.content {
  font-size: 14px;
}

.time {
  margin-top: 10rpx;
}
