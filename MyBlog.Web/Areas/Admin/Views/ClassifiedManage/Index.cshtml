
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Scripts/plugins/bootstrap-table/bootstrap-table.min.css" rel="stylesheet" />
<script src="~/Scripts/plugins/bootstrap-table/bootstrap-table.min.js"></script>
<script src="~/Scripts/plugins/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
<script src="~/Content/ClassifiedManage/ClassifiedManage.js"></script>
<div class="container-fluid" style="margin-top:30px;">
    <div class="row searchDiv" style="margin-bottom:10px;">
        <div class="col-md-6 col-xs-6 col-sm-6 col-lg-6 searchDivLeft">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default" id="add">
                <i class="glyphicon glyphicon-plus"></i>
                添加</button>
                <button type="button" class="btn btn-default" id="edit">
                <i class="glyphicon glyphicon-pencil"></i>
                编辑</button>
                <button type="button" class="btn btn-default" id="delete">
                <i class="glyphicon glyphicon-trash"></i>
                删除</button>
            </div>
        </div>
        <div class="col-md-6 col-xs-6 col-sm-6 col-lg-6 searchDivRight" style="text-align:right;">
            <span>分类名称：</span>
            <input type="text" class="text searchInput"  id="searchName"/>
            <input type="button" class="btn btn-success" value="搜索" id="btn_search" />
        </div>
       
    </div>
    <div class="row">
        <div class="table-responsive">
            <table id="classifiedTable"
                   class="table table-striped table-bordered table-hover"
                   data-query-params-type=""
                   data-cache="false"
                   data-pagination="true"
                   data-side-pagination="server"
                   data-click-to-select="true"
                   >
            </table>
        </div>
    </div>
</div>
